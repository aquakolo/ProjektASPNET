@model IEnumerable<ProjektASPNET.Models.OrdersModel>

    @{
    ViewBag.Title = "OrdersView";
    }

<form method="POST">
    <h2>OrdersView</h2>

    <table>
        <tr>
            <th>
                ID zamówienia
            </th>
            <th>
                Użytkownik
            </th>
            <th>
                Status zamówienia
            </th>
            <th>
                Sumaryczna cena
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPrice)
                </td>
                <td>
                    @Html.ActionLink("Zobacz", "OrderSeen", new { id = item.ID })
                </td>
            </tr>
        }
    </table>
</form>