@model ProjektASPNET.Models.ProductModel
@{
    ViewBag.Title = "ProductDelete";
}

<h2>Czy na pewno chcesz usunąć ten produkt?</h2>

<form method="post">
    <table class="body-content">
        <tr>
            <td>
               Id:
            </td>
            <td>
                @Html.DisplayFor(model => model.ID)
            </td>
        </tr>
        <tr>
            <td>
                Nazwa:
            </td>
            <td>
                @Html.DisplayFor(model => model.Name)
            </td>
        </tr>
        <tr>
            <td>
                Opis:
            </td>
            <td>
                @Html.DisplayFor(model => model.Description)
            </td>
        </tr>
        <tr>
            <td>
                Cena:
            </td>
            <td>
                @Model.Price.ToString().Substring(0, Model.Price.ToString().Length - 2),@Model.Price.ToString().Substring(Model.Price.ToString().Length - 2, 2) zł
            </td>
        </tr>
    </table>
    <button>Tak</button>
</form>
@Html.ActionLink("Powrót", "ProductsView")
