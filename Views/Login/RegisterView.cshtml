@model ProjektASPNET.Models.LoginModel
@{
    ViewBag.Title = "RegisterView";
}

<h2>Strona rejestracji</h2>

<form method="POST">
    <table>
        <tr>
            <td>Login:</td>
            <td>@Html.TextBoxFor(m => m.Login)</td>
        </tr>
        <tr>
            <td>Hasło:</td>
            <td>@Html.PasswordFor(m => m.Password)</td>
        </tr>
        <tr>
            <td>Powtórz hasło:</td>
            <td>@Html.PasswordFor(m => m.Password2)</td>
        </tr>
    </table>

     @Html.ValidationSummary()

    <button>Zarejestruj</button>

</form>